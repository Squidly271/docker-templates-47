<?xml version="1.0"?>
<Container version="2">
  <Name>Pihole-Unbound</Name>
  <Repository>dhovin/unraid_pihole_unbound</Repository>
  <Registry>https://registry.hub.docker.com/r/dhovin/unraid_pihole_unbound/</Registry>
  <Network>bridge</Network>
  <MyIP />
  <Shell>bash</Shell>
  <Privileged>true</Privileged>
  <Support>https://github.com/Dhovin/pihole-unbound/issues</Support>
  <Project>https://pihole.com/</Project>
  <Overview>Docker containing PiHole and Unbound</Overview>
  <Category>Network:DNS</Category>
  <WebUI>http://[IP]:[PORT:80]/admin/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/Dhovin/docker-templates/main/unraid_pihole_unbound.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/Dhovin/docker-templates/master/templates/icons/pihole.png</Icon>
  <ExtraParams>--cap-add=NET_ADMIN --restart=unless-stopped --hostname=pihole</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DonateText/>
  <DonateLink/>
  <Description>Docker container to run a pihole and unbound.</Description>
  <Environment />
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>80</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
	  <Port>
        <HostPort>53</HostPort>
        <ContainerPort>53</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
	  <Port>
        <HostPort>53</HostPort>
        <ContainerPort>53</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/pihole-unbound</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
    <Labels/>
  <Config Name="Pihole Web Admin" Target="80" Default="80" Mode="tcp" Description="Container Port: 80" Type="Port" Display="always" Required="true" Mask="false">80</Config>
  <Config Name="DNS TCP" Target="53" Default="53" Mode="tcp" Description="Container Port: 53" Type="Port" Display="always" Required="true" Mask="false">53</Config>
  <Config Name="DNS UDP" Target="53" Default="53" Mode="udp" Description="Container Port: 53" Type="Port" Display="always" Required="true" Mask="false">53</Config>
 </Container>